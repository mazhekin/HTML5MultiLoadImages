@model string[]

@{
    ViewBag.Title = "Index";
}

<style>
    ul li { display: inline; list-style: none; float: left; margin-left: 10px; margin-bottom: 5px; border: 1px solid black; height: 100px; }
</style>

@section scripts {
    @Scripts.Render("~/bundles/knockout")
    <script src="/scripts/file.uploader.js" type="text/javascript"></script>
}

<h2>Multiple load file</h2>

<div>
    <div style ="background-color: red; overflow:hidden; width: 132px; height: 32px; position: relative; left: 0px; top: 0px;">
        <input 
            style ="opacity:0; font-size: 32px; height: 32px; position:absolute; right: 0px; left: 0px;" 
            tabindex ="0" type="file" name="file" id="file-field" multiple="true" title ="Выберите фотографии" 
            data-bind="event:{change:filesChanged}" />
    </div>
</div>

<ul>
    <!-- ko foreach: savedFiles -->
    <li>
        <img data-bind="imgScr: $data" />
    </li>
    <!-- /ko -->
    
    @foreach (var fileName in Model)
    {
    <li>
        <img src="/home/icon/@(fileName)" alt ="@fileName" />
    </li>
    }

</ul>

